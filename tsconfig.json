{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",   // ✅ instead of nodenext
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["react", "react-native"], // ✅ ensure RN types are included
    "skipLibCheck": true
  },
  "include": ["src", "App.tsx"]
}
